pipeline {
    agent {
        label "built-in"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/shwetaraut815/devops-CI-CD-project.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh '''
                    echo "Running Ansible playbook..."
                    ansible-playbook -i ansible/inventory ansible/config.yaml
                '''
            }
        }
    }
}