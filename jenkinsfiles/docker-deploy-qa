            steps {
                sh 'bash dcker-compose/update-db-config.sh'
            }
        }

        stage('Run Docker Compose') {
            steps {
                sh "cd ${composedirname} && sudo docker-compose up -d"
            }
        }

        stage('DB Integration') {
